//This program will find the area of triangle with Given Co-ordinates.
#include<stdio.h>
int main(void)
{
    int x1, x2, x3, y1, y2, y3;
    float aot;
    
    printf("Enter the co-odinates of first point\n");
    scanf("%d%d",&x1,&y1);
    
    printf("Enter the co-ordinates of second point\n");
    scanf("%d%d",&x2,&y2);
    
    printf("Enter the co-odinates of third point\n");
    scanf("%d%d",&x3,&y3);
    
    aot = 1/2*(x1*(y2-y3)+x2*(y3-y1)+x3*(y1-y2));
    
    if(aot<0){
        aot=(-(aot));
        printf("Area of trinagle is %f\n",aot);
        }   
    else{
        printf("Area of trinagle is %f\n",aot);
        }
    
    return 0;
    
}
